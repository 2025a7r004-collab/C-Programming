#include<stdio.h>
int main(){
int a;
printf("Enter the Number : ");
scanf("%d", &a);
if(a%2==0){
printf("Number is Even");
}
else{
    printf("Number is Odd");
}
    return 0;
}


#include<stdio.h>
int main(){
char ch;
printf("Enter the alphabet : ");
scanf("%c", &ch);
if(ch=='A' || ch=='E' || ch=='I' || ch=='O' || ch=='U' || ch=='a' || ch=='e' || ch=='i' || ch=='o' || ch=='u'){
printf("It is a Vowel");
}
else{
    printf("It is a constant");
}
    return 0;
}


#include<stdio.h>
int main(){
    int choice;
float r, l, b, x, area, perimeter;
printf("1. Area and Perimeter of Circle\n");
printf("2. Area and Perimeter of Rectangle\n");
printf("3. Area and Perimeter of Square");
printf("\nEnter your choice : ");
scanf("%d", &choice);

switch (choice){
    case 1:
printf("Enter the radius of the circle : ");
scanf("%f", &r);
area = 3.14*r*r;
perimeter = 2*3.14*r;
printf("Area of circle = %f", area);
printf("\nPerimeter of Circle = %f", perimeter);
break;
case 2:
printf("\nEnter the dimensions of the rectangle : ");
scanf("%f%f", &l, &b);
area = l*b;
perimeter = 2*(l+b);
printf("Area of Rectangle = %f", area);
printf("\nPerimeter of Rectangle = %f", perimeter);
break;
case 3:
printf("\nEnter the side of square : ");
scanf("%f", &x);
area = x*x;
perimeter = 4*x;
printf("Area of Square = %f", area);
printf("\nPerimeter of Square = %f", perimeter);
break;
default:
printf("Invalid choice");
}
return 0;
}

